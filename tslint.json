{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "build/**"
    ]
  },
  "rules": {
    "semicolon": [true, "always"],
    "max-line-length": [true, 150],
    "indent": [true, "spaces", 2],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "no-console": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-var-requires": false
  }
}
