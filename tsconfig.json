{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",

    "outDir": "build",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },

    "strict": true,
    "strictPropertyInitialization": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["build", "node_modules"],
  "include": ["src", "gulpfile.ts"]
}
